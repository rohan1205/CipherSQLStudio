# CipherSQL Studio - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file with real secrets to version control

# Server Configuration
PORT=5000

# MongoDB Atlas Connection
# Format: mongodb+srv://username:password@cluster-name.mongodb.net/database-name
# Get your connection string from MongoDB Atlas dashboard
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/ciphersql?retryWrites=true&w=majority

# PostgreSQL Connection (Learning Sandbox)
# These are the connection details for the isolated SQL learning database
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=your_secure_password
PG_DATABASE=sql_learning

# OpenRouter LLM API Key
# Get your API key from https://openrouter.ai
# Used for AI-powered hint generation
OPENROUTER_API_KEY=sk_live_your_api_key_here

# Environment
NODE_ENV=development